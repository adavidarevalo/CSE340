<% if (title) { %>
<h1><%= title %></h1>
<% } else { %>
<h1>Account Management</h1>
<% } %>

<%- messages() %>

<div class="account-dashboard">
  <div class="welcome-section">
    <h2>Welcome back, <%= locals.accountData.account_firstname %>! üëã</h2>
    <p class="welcome-message"><%= welcomeMessage %></p>
  </div>

  <div class="account-actions">
    <h3>Account Actions</h3>
    <div class="action-grid">
      <a href="/account/update/<%= locals.accountData.account_id %>" class="action-card">
        <div class="action-icon">‚öôÔ∏è</div>
        <div class="action-content">
          <h4>Update Account</h4>
          <p>Modify your personal information and password</p>
        </div>
      </a>
      
      <a href="/reviews/" class="action-card">
        <div class="action-icon">‚≠ê</div>
        <div class="action-content">
          <h4>Manage Reviews</h4>
          <p>View, edit, or delete your vehicle reviews</p>
        </div>
      </a>
    </div>
  </div>

  <% if (locals.accountData && locals.accountData.account_type) { %>
    <% if (locals.accountData.account_type === "Admin" || locals.accountData.account_type === "Employee") { %>
    <div class="management-section">
      <h3>Staff Tools</h3>
      <div class="action-grid">
        <a href="/inv/" class="action-card management">
          <div class="action-icon">üöó</div>
          <div class="action-content">
            <h4>Manage Inventory</h4>
            <p>Add, edit, and manage vehicle inventory</p>
          </div>
        </a>
      </div>
    </div>
    <% } %>
  <% } %>
</div>

<style>
.account-dashboard {
  max-width: 900px;
  margin: 0 auto;
  padding: 30px 20px;
}

.welcome-section {
  text-align: center;
  margin-bottom: 40px;
  padding: 30px;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  color: white;
  border-radius: 20px;
  box-shadow: 0 10px 30px rgba(102, 126, 234, 0.3);
}

.welcome-section h2 {
  margin: 0 0 15px 0;
  font-size: 2.2em;
  font-weight: 600;
}

.welcome-message {
  font-size: 18px;
  margin: 0;
  opacity: 0.9;
}

.account-actions, .management-section {
  margin-bottom: 40px;
}

.account-actions h3, .management-section h3 {
  color: #2c3e50;
  font-size: 1.8em;
  margin-bottom: 25px;
  text-align: center;
  position: relative;
}

.account-actions h3::after, .management-section h3::after {
  content: '';
  position: absolute;
  bottom: -10px;
  left: 50%;
  transform: translateX(-50%);
  width: 60px;
  height: 3px;
  background: linear-gradient(90deg, #49a1d2, #667eea);
  border-radius: 2px;
}

.action-grid {
  display: grid;
  grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
  gap: 25px;
  margin-top: 30px;
}

.action-card {
  display: flex;
  align-items: center;
  padding: 25px;
  background: white;
  border: 2px solid #e9ecef;
  border-radius: 15px;
  text-decoration: none;
  color: inherit;
  transition: all 0.3s cubic-bezier(0.175, 0.885, 0.32, 1.275);
  box-shadow: 0 5px 15px rgba(0, 0, 0, 0.08);
  position: relative;
  overflow: hidden;
}

.action-card::before {
  content: '';
  position: absolute;
  top: 0;
  left: -100%;
  width: 100%;
  height: 100%;
  background: linear-gradient(90deg, transparent, rgba(73, 161, 210, 0.1), transparent);
  transition: left 0.6s;
}

.action-card:hover {
  transform: translateY(-5px) scale(1.02);
  box-shadow: 0 15px 35px rgba(0, 0, 0, 0.15);
  border-color: #49a1d2;
}

.action-card:hover::before {
  left: 100%;
}

.action-card.management {
  border-color: #28a745;
}

.action-card.management:hover {
  border-color: #28a745;
  box-shadow: 0 15px 35px rgba(40, 167, 69, 0.2);
}

.action-icon {
  font-size: 3em;
  margin-right: 20px;
  display: flex;
  align-items: center;
  justify-content: center;
  width: 80px;
  height: 80px;
  background: linear-gradient(135deg, #f8f9fa 0%, #e9ecef 100%);
  border-radius: 50%;
  position: relative;
  z-index: 2;
}

.action-content {
  flex: 1;
  position: relative;
  z-index: 2;
}

.action-content h4 {
  margin: 0 0 10px 0;
  color: #2c3e50;
  font-size: 1.4em;
  font-weight: 600;
}

.action-content p {
  margin: 0;
  color: #6c757d;
  font-size: 16px;
  line-height: 1.5;
}

/* Responsive Design */
@media screen and (max-width: 768px) {
  .account-dashboard {
    padding: 20px 15px;
  }
  
  .welcome-section {
    padding: 25px 20px;
  }
  
  .welcome-section h2 {
    font-size: 1.8em;
  }
  
  .action-grid {
    grid-template-columns: 1fr;
    gap: 20px;
  }
  
  .action-card {
    flex-direction: column;
    text-align: center;
    padding: 30px 20px;
  }
  
  .action-icon {
    margin: 0 0 20px 0;
  }
}

@media screen and (max-width: 480px) {
  .welcome-section h2 {
    font-size: 1.5em;
  }
  
  .welcome-message {
    font-size: 16px;
  }
  
  .action-icon {
    font-size: 2.5em;
    width: 70px;
    height: 70px;
  }
  
  .action-content h4 {
    font-size: 1.2em;
  }
}
</style>

