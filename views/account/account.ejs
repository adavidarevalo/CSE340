<% if (title) { %>
<h1><%= title %></h1>
<% } else { %>
<h1>Account Management</h1>
<% } %>

<% if (message) { %>
<p class="notice"><%= message %></p>
<% } %>

<h2>Welcome <%= locals.accountData.account_firstname %></h2>

<p><%= welcomeMessage %></p>

<p><a href="/account/update/<%= locals.accountData.account_id %>" class="account-button">Update Account Information</a></p>

<% if (locals.accountData && locals.accountData.account_type) { %>
  <% if (locals.accountData.account_type === "Admin" || locals.accountData.account_type === "Employee") { %>
  <h3>Inventory Management</h3>
  <p><a href="/inv/" class="management-link">Manage Inventory</a></p>
  <% } %>
<% } %>

